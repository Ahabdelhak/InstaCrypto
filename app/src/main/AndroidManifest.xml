<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.instacrypto">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.instacrypto.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstaCrypto">

        <activity
            android:name="com.example.feature.ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.InstaCrypto.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>